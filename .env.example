# HuggingFace API Token (مطلوب)
# احصل على التوكن من: https://huggingface.co/settings/tokens
HUGGINGFACE_TOKEN=your_huggingface_token_here

# إعدادات الصور الافتراضية
DEFAULT_WIDTH=512
DEFAULT_HEIGHT=512
MAX_WIDTH=1024
MAX_HEIGHT=1024

# إعدادات الجودة
DEFAULT_STEPS=20
MAX_STEPS=50
DEFAULT_GUIDANCE=7.5

# إعدادات التخزين
OUTPUT_DIR=output
MAX_STORAGE_MB=1000
AUTO_CLEANUP_DAYS=30

# إعدادات API
RATE_LIMIT_PER_MINUTE=10
TIMEOUT_SECONDS=60
MAX_PROMPT_LENGTH=500

# إعدادات الخادم
HOST=0.0.0.0
PORT=8000
DEBUG=false

# إعدادات الأمان
ENABLE_WATERMARK=true
ENABLE_METADATA=true
ENABLE_RATE_LIMITING=true

# إعدادات اختيارية للتطوير
DEVELOPMENT_MODE=false
LOG_LEVEL=INFO
ENABLE_CORS=true

# إعدادات قاعدة البيانات (اختياري للمستقبل)
# DATABASE_URL=sqlite:///./prompt2image.db
# DATABASE_ECHO=false

# إعدادات Redis للكاش (اختياري)
# REDIS_URL=redis://localhost:6379/0
# CACHE_TTL=3600

# إعدادات البريد الإلكتروني (اختياري)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_app_password

# إعدادات المراقبة (اختياري)
# SENTRY_DSN=your_sentry_dsn_here
# ENABLE_METRICS=true